root = true

# a11y
[*]
indent_style = tab
indent_size = 2
tab_width = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# community
[*.{yml,yaml,rb}]
indent_style = space
indent_size = 2

# PEP 8
[*.py]
indent_style = space
indent_size = 4

[*.{js,json,ts,jsx,tsx,html,css,scss}]
indent_style = space
indent_size = 2
